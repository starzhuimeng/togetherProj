
.example{
	margin: 20rpx 40rpx;
	-webkit-box-shadow: 0rpx 0rpx 20rpx #eee;
	        box-shadow: 0rpx 0rpx 20rpx #eee;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	height: 500rpx;
	border-radius: 10rpx;
	overflow: hidden;
}
.example-top{
	-webkit-box-flex: 6;
	-webkit-flex: 6;
	    -ms-flex: 6;
	        flex: 6;
	position: relative;
	overflow: hidden;
}
.example-bottom{
	-webkit-box-flex: 2;
	-webkit-flex: 2;
	    -ms-flex: 2;
	        flex: 2;
	position: relative;
	overflow: hidden;
}
.example-content{
	width: 630rpx;
	overflow:hidden;
	line-height: 72rpx;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	padding: 0rpx 20rpx;
}
.example-tabs-group{
	width: 400rpx;
	position: absolute;
	height: 40rpx;
	right: 20rpx;
	bottom: 20rpx;
	font-size: 24rpx;
	line-height: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-align-content: center;
	    -ms-flex-line-pack: center;
	        align-content: center;
	color: #999;
}
.tab-box{
	width: 100rpx;
	height: 30rpx;
	padding: 10rpx 20rpx;
	background-color: #007AFF;
	font-size: 12rpx;
	line-height: 30rpx;
	text-align: center;
	position: absolute;
	left: 20rpx;
	top: 20rpx;
	color: #fff;
}
.user-icon{
	width: 100rpx;
	height: 100rpx;
	border: 1rpx solid #fff;
	border-radius: 50%;
	position: absolute;
	bottom: 20rpx;
	overflow: hidden;
	left: 20rpx;
}
.title{
	position: absolute;
	left: 140rpx;
	bottom: 20rpx;
	width: 520rpx;
	color: #fff;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 32rpx;
	overflow:hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}

